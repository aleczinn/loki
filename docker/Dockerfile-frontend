# Frontend Production Dockerfile
FROM node:18-alpine AS builder

WORKDIR /app

# Build-Argument für API URL
ARG VITE_API_URL=/api

# Kopiere package files vom frontend Ordner
COPY frontend/package*.json ./

# Installiere Dependencies
RUN npm ci

# Kopiere Source Code
COPY frontend/ ./

# Setze Umgebungsvariable für Build
ENV VITE_API_URL=$VITE_API_URL

# Baue die Vue.js Anwendung
RUN npm run build

# Production Stage mit Nginx
FROM nginx:alpine

# Installiere Tools für Health Check
RUN apk add --no-cache curl

# Kopiere gebaute Anwendung vom Builder
COPY --from=builder /app/dist /usr/share/nginx/html

# Kopiere Nginx Konfiguration aus docker Ordner
COPY docker/nginx.conf /etc/nginx/nginx.conf

# Exponiere Ports
EXPOSE 80 443

# Health Check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost/ || exit 1

# Starte Nginx
CMD ["nginx", "-g", "daemon off;"]